<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp">
<!--60dp-->
    <TextView
        android:id="@+id/carddemo_gplay_main_inner_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textColor="@android:color/black"
        android:text="Paybill"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/carddemo_gplay_main_inner_subtitle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20sp"
        android:text="Paybill Number"
        android:layout_alignBottom="@+id/description"
        android:layout_alignLeft="@+id/description"
        android:layout_alignStart="@+id/description" />

    <com.like.LikeButton
        app:icon_type="heart"
        app:icon_size="15dp"
        app:liked="false"
        android:id="@+id/heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/carddemo_gplay_main_inner_title"
        android:layout_toStartOf="@+id/carddemo_gplay_main_inner_title"
        android:layout_toRightOf="@+id/carddemo_gplay_main_inner_subtitle"
        android:layout_toEndOf="@+id/carddemo_gplay_main_inner_subtitle"/>

